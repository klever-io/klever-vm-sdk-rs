{
  "name": "lottery flow with burn percentage integrated",
  "gasSchedule": "dummy",
  "steps": [
    {
      "step": "externalSteps",
      "path": "lottery-init.scen.json"
    },
    {
      "step": "setState",
      "accounts": {
        "address:acc1": {
          "nonce": "0",
          "balance": "1,000,000",
          "kda": {
            "str:LOTTERY-1234": {
              "instances": [
                {
                  "balance": "200",
                  "canBurn": true
                }
              ]
            }
          }
        },
        "sc:lottery": {
          "nonce": "0",
          "balance": "0",
          "kda": {
            "str:LOTTERY-1234": {
              "instances": [
                {
                  "balance": "0",
                  "canBurn": true
                }
              ]
            }
          },
          "code": "kleversc:../output/lottery-kda.kleversc.json"
        }
      }
    },
    {
      "step": "scCall",
      "id": "start limited tickets, fixed deadline, 50% burn rate",
      "comment": "start lottery after setting local burn role",
      "tx": {
        "from": "address:my_address",
        "to": "sc:lottery",
        "function": "start",
        "arguments": [
          "str:lottery_name",
          "str:LOTTERY-1234",
          "100",
          "0x01|u32:2",
          "0x01|u64:123,456",
          "0x",
          "0x",
          "0x",
          "50"
        ],
        "gasLimit": "100,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "out": [],
        "status": "0",
        "message": "",
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "checkState",
      "id": "check-state-after-start",
      "accounts": {
        "sc:lottery": {
          "nonce": "0",
          "balance": "0",
          "kda": "*",
          "storage": {
            "str:lotteryInfo|nested:str:lottery_name": {
              "0-token_identifier": "nested:str:LOTTERY-1234",
              "1-ticket_price": "biguint:100",
              "2-tickets-left": "u32:2",
              "3-deadline": "u64:123,456",
              "4-max_entries_per_user": "u32:800",
              "5-prize_distribution": "nested:u8:100",
              "6-prize_pool": "biguint:0"
            },
            "str:burnPercentageForLottery|nested:str:lottery_name": "50"
          },
          "code": "kleversc:../output/lottery-kda.kleversc.json"
        },
        "+": ""
      }
    },
    {
      "step": "scCall",
      "id": "buy first ticket",
      "tx": {
        "from": "address:acc1",
        "to": "sc:lottery",
        "kdaValue": [
          {
            "tokenIdentifier": "str:LOTTERY-1234",
            "value": "100"
          }
        ],
        "function": "buy_ticket",
        "arguments": ["str:lottery_name"],
        "gasLimit": "100,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "out": [],
        "status": "0",
        "message": "",
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "scCall",
      "id": "buy second ticket",
      "tx": {
        "from": "address:acc1",
        "to": "sc:lottery",
        "kdaValue": [
          {
            "tokenIdentifier": "str:LOTTERY-1234",
            "value": "100"
          }
        ],
        "function": "buy_ticket",
        "arguments": ["str:lottery_name"],
        "gasLimit": "100,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "out": [],
        "status": "0",
        "message": "",
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "checkState",
      "id": "check-state-after-buying-tickets",
      "accounts": {
        "address:acc1": {
          "nonce": "2",
          "balance": "1,000,000",
          "kda": {
            "str:LOTTERY-1234": "0"
          },
          "storage": {}
        },
        "sc:lottery": {
          "nonce": "0",
          "balance": "0",
          "kda": {
            "str:LOTTERY-1234": {
              "instances": [
                {
                  "nonce": "0",
                  "balance": "200"
                }
              ]
            }
          },
          "storage": {
            "str:lotteryInfo|nested:str:lottery_name": {
              "0-token_identifier": "nested:str:LOTTERY-1234",
              "1-ticket_price": "biguint:100",
              "2-tickets-left": "u32:0",
              "3-deadline": "u64:123,456",
              "4-max_entries_per_user": "u32:800",
              "5-prize_distribution": "nested:u8:100",
              "6-prize_pool": "biguint:200"
            },
            "str:burnPercentageForLottery|nested:str:lottery_name": "50",
            "str:ticketHolder|nested:str:lottery_name|str:.len": "2",
            "str:ticketHolder|nested:str:lottery_name|str:.item|u32:1": "address:acc1",
            "str:ticketHolder|nested:str:lottery_name|str:.item|u32:2": "address:acc1",
            "str:numberOfEntriesForUser|u32:12|str:lottery_name|address:acc1": "2"
          },
          "code": "kleversc:../output/lottery-kda.kleversc.json"
        },
        "+": ""
      }
    },
    {
      "step": "scCall",
      "id": "determine-winner-same-ticket-holder",
      "tx": {
        "from": "address:my_address",
        "to": "sc:lottery",
        "function": "determine_winner",
        "arguments": ["str:lottery_name"],
        "gasLimit": "100,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "out": [],
        "status": "0",
        "message": "",
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "checkState",
      "comment": "check that 50% was burned, and 50% returned to acc1",
      "accounts": {
        "address:acc1": {
          "nonce": "2",
          "balance": "1,000,000",
          "kda": {
            "str:LOTTERY-1234": "100"
          },
          "storage": {}
        },
        "sc:lottery": {
          "nonce": "0",
          "balance": "0",
          "kda": "*",
          "storage": {
            "str:lotteryInfo|nested:str:lottery_name": "",
            "str:burnPercentageForLottery|nested:str:lottery_name": "0"
          },
          "code": "kleversc:../output/lottery-kda.kleversc.json"
        },
        "+": ""
      }
    }
  ]
}
